{
    "name": "properties-language-alternative",
    "publisher": "deitry",
    "repository": {
        "url": "https://github.com/deitry/vscode-properties-language-alternative"
    },
    "displayName": "Alternative Properties Language",
    "description": "Alternative syntax highlighting for .properties",
    "version": "0.0.2",
    "engines": {
        "vscode": "^1.64.0"
    },
	"activationEvents": [
		"onLanguage:properties-alternative"
	],
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "properties-alternative",
            "aliases": ["Properties (alt.)", "properties-alternative", "dosini"],
            "extensions": [".properties"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "properties-alternative",
            "scopeName": "source.properties.alt",
            "path": "./syntaxes/properties-alternative.tmLanguage.json"
        }]
    }
}
